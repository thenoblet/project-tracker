              "TODO",
              "ASSIGNED",
              "APPROVED",
              "IN_PROGRESS",
              "DONE",
              "BLOCKED"
            ]
          },
          "priority": {
            "type": "string",
            "enum": [
              "LOW",
              "MEDIUM",
              "HIGH"
            ]
          },
          "dueDate": {
            "type": "string",
            "format": "date"
          },
          "projectId": {
            "type": "string",
            "format": "uuid"
